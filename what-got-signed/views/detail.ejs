<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head', { title: 'What Got Signed?' }) %>
</head>
<body>
  <div class="page">
    <div class="content">
      <%- include('partials/header', { isHome: false }) %>

      <h2 class="detail-title" id="page-title">Review of executive orders for [name or duration].</h2>

      <wa-callout id="detail-callout" style="display: none;">
        <wa-icon slot="icon" name="circle-info"></wa-icon>
        <span id="detail-callout-message"></span>
      </wa-callout>

      <section class="summary" id="summary-section">
        <h3>Summary</h3>
        <div id="summary-content" class="wa-body-m"></div>
      </section>

      <section class="potential-impact" id="impact-section">
        <h3>Potential impact</h3>
        <div id="impact-content" class="wa-body-m"></div>
      </section>

      <section class="orders-list" id="orders-section">
        <h3>List of executive orders</h3>
        <div id="orders-content"></div>
      </section>

      <%- include('partials/back-to-top') %>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="/detail.js"></script>
</body>
</html>
